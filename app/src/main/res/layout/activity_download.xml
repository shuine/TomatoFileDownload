<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout android:id="@+id/download_layout_first"
        android:orientation="vertical" android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/download_title_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop"/>

        <ProgressBar android:id="@+id/download_progress_first"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progress="50"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button android:id="@+id/download_btn_first_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Start"/>
            <Button android:id="@+id/download_btn_first_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause"/>
            <Button android:id="@+id/download_btn_first_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Resume"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/download_layout_second"
        android:layout_below="@id/download_layout_first"
        android:orientation="vertical" android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/download_title_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop"/>

        <ProgressBar android:id="@+id/download_progress_second"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progress="50"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button android:id="@+id/download_btn_second_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Start"/>
            <Button android:id="@+id/download_btn_second_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause"/>
            <Button  android:id="@+id/download_btn_second_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Resume"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout  android:id="@+id/download_layout_third"
        android:layout_below="@+id/download_layout_second"
        android:orientation="vertical" android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/download_title_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop"/>
        <ProgressBar android:id="@+id/download_progress_third"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progress="50"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button android:id="@+id/download_btn_third_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Start"/>
            <Button android:id="@+id/download_btn_third_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause"/>
            <Button android:id="@+id/download_btn_third_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Resume"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/download_btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:text="start" />

        <Button
            android:id="@+id/download_btn_pasue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:text="pause" />

        <Button
            android:id="@+id/download_btn_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:text="resume" />
    </LinearLayout>


</RelativeLayout>
